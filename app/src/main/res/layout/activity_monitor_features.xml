<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp"

    tools:context=".user_interface.monitor_activities.MonitorFeaturesActivity">

    <Button
        android:id="@+id/manage_monitor_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_monitors_button" />

    <Button
        android:id="@+id/monitorees_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monitorees_button" />

    <Button
        android:id="@+id/monitors_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monitors_button" />

    <Button
        android:id="@+id/monitors_map_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monitored_map_button" />
</LinearLayout>